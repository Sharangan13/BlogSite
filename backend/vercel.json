{
  "version": 2,
  "installCommand": "npm install --legacy-peer-deps",
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "/build/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { 
      "src": "/(.*)", 
      "dest": "backend/build/index.html"
    }
  ]
}
